# Database Configuration
DB_HOST=localhost
DB_NAME=postgres
DB_USER=postgres
# Replace with the actual password before running locally or in CI
DB_PASSWORD=

# vLLM Configuration
VLLM_BASE_URL=http://localhost:8000/v1
